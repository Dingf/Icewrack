				<Label hittest="false" class="TooltipModifierTitleExtra" id="Class" />
				<Label hittest="false" class="TooltipModifierTitleExtra" id="Status" />
			</Panel>
		</Panel>
		<Panel hittest="false" class="TooltipModifierDivider" />
		<Label hittest="false" html="true" class="TooltipModifierDescriptionLabel" id="Description" />
	</Panel>
</root>